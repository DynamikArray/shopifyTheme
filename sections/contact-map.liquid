{%- if section.settings.color_bg != 'rgba(0,0,0,0)' -%}
    {%- capture bgColor -%}
        background-color: {{ section.settings.color_bg }};
    {%- endcapture -%}
{%- endif -%}
{%- if section.settings.padding_block != blank -%}
    {%- capture paddingblock -%}
        padding: {{section.settings.padding_block}};
    {%- endcapture -%}
{%- endif -%}
{%- if section.settings.margin_block != blank -%}
    {%- capture marginblock -%}
        margin: {{section.settings.margin_block}};
    {%- endcapture -%}
{%- endif -%}
<section class="vela-section vela-section--collections overflow-hidden" style="{{ bgColor}}{{ paddingblock }}{{ marginblock }}">
    <div class="container{% if section.settings.full_with %}-flull{% endif %}">
        <div class="vela-section__inner">
            <div class="row g-0">
                {% if section.settings.contact_details_enable %}
                    <div class="col-12 col-xl-4 col-xxl-3">
                        <div class="map-info position-relative m-3 m-md-4 m-xl-0">
                                {%- assign contactinfoDesc = section.settings.contactinfo_desc -%}
                                {%- assign contactinfoAdd = section.settings.contactinfo_add -%}
                                {%- assign contactinfoPhone = section.settings.contactinfo_phone -%}
                                {%- assign contactinfoEmail = section.settings.contactinfo_email -%}
                                <h3 class="map-info__title text-uppercase mb-4">{{ section.settings.contactinfo_title }}</h3>
                                <div class="map-info__content">
                                    {% if contactinfoDesc != blank %}
                                        <div class="map-info__item map-info__desc mb-3">{{ contactinfoDesc }}</div>
                                    {% endif %}
                                    {% if contactinfoAdd != blank %}
                                        <div class="map-info__item map-info__address d-flex mb-3">
                                            <i class="icons text-center text-white me-3 rounded-circle">
                                                {% include 'icons', icon: 'map-marker' %}
                                            </i>
                                            <div>
                                                {{ contactinfoAdd }}
                                            </div>
                                        </div>
                                    {% endif %}    
                                    {% if contactinfoPhone != blank %}
                                        <div class="map-info__item map-info__phone d-flex mb-3">
                                            <i class="icons text-center text-white me-3 rounded-circle">
                                                {% include 'icons', icon: 'phone' %}
                                            </i>
                                            <div>
                                                {{ contactinfoPhone }}
                                            </div>
                                        </div>
                                    {% endif %}    
                                    {% if contactinfoEmail != blank %}
                                        <div class="map-info__item map-info__email d-flex">
                                            <i class="icons text-center text-white me-3 rounded-circle">
                                                {% include 'icons', icon: 'email' %}
                                            </i>
                                            <div>
                                                {{ contactinfoEmail }}
                                            </div>
                                        </div>
                                    {% endif %}
                            </div>
                        </div>
                    </div>
                {% endif %}
                {%- if section.settings.googlemap_enable and section.settings.googlemap_iframe != blank -%}
                    <div class="col-12 {% if section.settings.contact_details_enable  %}col-xl-8 col-xxl-9{% endif %}">
                        <div class="page-contact__map d-flex w-100">
                            {{ section.settings.googlemap_iframe }}
                        </div>
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</section>

{% schema %}
  	{
        "name": "Contact Map",
        "settings": [
            {
                "type": "header",
                "content": "Design Section"
            },
            {
                "type": "checkbox",
                "id": "full_with",
                "label": "Enabel Full Width?"
            },
            {
                "type": "color",
                "id": "color_bg",
                "label": "Background Color",
                "default": "rgba(0,0,0,0)"
            },
            {
                "type": "text",
                "id": "padding_block",
                "label": "Padding",
                "placeholder": "0px 0px",
                "info": "Ex: 0px 0px 0px 0px and use desktop only"
            },
            {
                "type": "text",
                "id": "margin_block",
                "label": "Margin",
                "placeholder": "0px 0px",
                "default": "0 0 30px",
                "info": "Ex: 0px 0px 30px 0px"
            },
            {
                "type": "header",
                "content": "General Settings"
            },
            {
                "type": "checkbox",
                "id": "googlemap_enable",
                "label": "Enable Google Map?"
            },
            {
                "type": "textarea",
                "id": "googlemap_iframe",
                "label": "Google Map Code",
                "placeholder": "Embed Map"
            },
            {
                "type": "header",
                "content": "Contact Details"
            },
            {
                "type": "checkbox",
                "id": "contact_details_enable",
                "label": "Enable Contact Details?",
                "default": true
            },
            {
                "type": "text",
                "id": "contactinfo_title",
                "placeholder": "Title for Block",
                "label": "Title"
            },
            {
                "type": "textarea",
                "id": "contactinfo_desc",
                "label": "Description"
            },
            {
                "type": "text",
                "id": "contactinfo_add",
                "label": "Adress"
            },
            {
                "type": "text",
                "id": "contactinfo_phone",
                "label": "Phone"
            },
            {
                "type": "text",
                "id": "contactinfo_email",
                "label": "Email"
            }
		],
        "presets": [
            {
                "name": "Contact Map",
                "category": "4. element"
            }
        ]
  	}
{% endschema %}