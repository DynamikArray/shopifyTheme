{% style %}
      {{ settings.type_body_font | font_face: font_display: 'swap' }}
      {{ body_font_bold | font_face: font_display: 'swap' }}
      {{ body_font_italic | font_face: font_display: 'swap' }}
      {{ body_font_bold_italic | font_face: font_display: 'swap' }}
      {{ settings.type_header_font | font_face: font_display: 'swap' }}
      {{ heading_font_extra_bold | font_face: font_display: 'swap' }}

      :root {
        --font-body-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
        --font-body-style: {{ settings.type_body_font.style }};
        --font-body-weight: {{ settings.type_body_font.weight }};

        --font-heading-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
        --font-heading-style: {{ settings.type_header_font.style }};
        --font-heading-weight: {{ settings.type_header_font.weight }};

        {%- if settings.type_special_font -%}
          --font-special-family:    {{ settings.type_special_font }};
        {%- endif -%}

		--font-size-header: {{ settings.type_header_base_size }}px;
		--font-size-header-mobile: {{ settings.type_header_base_size | times: 1 | times: 0.8 | floor }}px;;

		--font-size-base: {{ settings.type_base_size }}px;
		--primary: {{ settings.color_primary }};
		--secondary: {{ settings.color_secondary }};
		--body-color: {{ settings.color_body_text }};
		--body-bg: {{ settings.color_body_bg }};
		--heading-color: {{ settings.color_headings }};
		--color-link: var(--heading-color);
		--color-link-hover: var(--primary);
		--border-color: {{ settings.color_border }};
    	--shadow: 0px 6px 15px rgba(0, 0, 0, .12);
		--button-border-radius: 30px;
		--header-color: {{ settings.color_header_text }};
		--header-bg: {{ settings.color_header_bg }};
		--footer-heading-color: {{ settings.color_footer_heading }};
		--footer-color: {{ settings.color_footer_text }};
		--footer-link: {{ settings.color_footer_link}};
		--footer-link-hover: {{ settings.color_footer_link_hover}};
		--footer-bg: {{ settings.color_footer_bg }};
		--color-copyright-bg: {{ settings.color_copyright_bg }};
		--color-copyright: {{ settings.color_copyright }};
	
		--menu-font-size: {{ settings.type_menu_size }}px;
		--menu-dropdown-font-size: {{ settings.tyep_menu_dropdown_size }}px;
		--menu-bg: {{ settings.color_menu_bg }};
		--menu-color: {{ settings.color_menu_text }};
		--menu-hover-color: {{ settings.color_menu_text_hover }};
		--menu-dropdown-bg: {{ settings.color_submenu_bg }};
		--menu-dropdown-color: {{ settings.color_submenu_text }};
		--menu-dropdown-hover-color: {{ settings.color_submenu_text_hover }};

		--breadcrumb-bg: {{ settings.breadcrumb_bg }};
		--breadcrumb-heading-color: {{ settings.breadcrumb_heading_color }};
		--breadcrumb-color: {{ settings.breadcrumb_color }};
		--breadcrumb-color-link: {{ settings.breadcrumb_color_link}};
	
		--font-h1-desktop: {{ settings.type_header_base_size | times: 1.2 | floor }}px;
		--font-h1-mobile: {{ settings.type_header_base_size | times: 1 | times: 0.9 | floor }}px;
		--font-h2-desktop: {{ settings.type_header_base_size | times: 1.15 | floor }}px;
		--font-h2-mobile: {{ settings.type_header_base_size | times: 0.9 | times: 0.9 | floor }}px;
		--font-h3-desktop: {{ settings.type_header_base_size | times: 0.85 | floor }}px;
		--font-h3-mobile: {{ settings.type_header_base_size | times: 0.85 | times: 0.9 | floor  }}px;
		--font-h4-desktop: {{ settings.type_header_base_size | times: 0.63 | floor }}px;
		--font-h4-mobile: {{ settings.type_header_base_size | times: 0.63 | times: 0.9 | floor }}px;
		--font-h5-desktop: {{ settings.type_header_base_size | times: 0.58 | floor }}px;
		--font-h5-mobile: {{ settings.type_header_base_size | times: 0.58 | times: 0.9 | floor }}px;
		--font-h6-desktop: {{ settings.type_header_base_size | times: 0.45 | floor }}px;
		--font-h6-mobile: {{ settings.type_header_base_size | times: 0.45 | times: 0.9 | floor }}px;

		--btn-default-color: {{ settings.color_btn }};
		--btn-default-border-color: {{ settings.color_btn_border }};
		--btn-default-bg-color: {{ settings.color_btn_bg }};
		--btn-default-hover-color: {{ settings.color_btn_hover }};
		--btn-default-hover-border-color: {{ settings.color_btn_hover_border }};
		--btn-default-hover-bg-color: {{ settings.color_btn_hover_bg }};

		--image-border-radius: 10px;
		--image-border-color: var(--border-color);
}

	  	
    {% endstyle %}