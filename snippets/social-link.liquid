{%- assign socials = "Facebook Twitter Pinterest Instagram Tumblr Snapchat YouTube Vimeo" | split: ' ' -%}
<div class="social-link">
    <ul class="d-flex flex-wrap {{ position }}-social list-unstyled mb-0">
        {%- for social in socials -%}
            {%- assign social_link = social | prepend: 'social_' | append: '_link' | downcase -%}
            {%- assign icon_link = social | downcase -%}
            {%- if settings[social_link] != blank -%}
                <li class="social-icons-item">
                    <a class="social-icons--link text-center" href="{{ settings[social_link] | escape }}" title="{{ social }}">
                        {%- include 'icons', icon: icon_link -%}
                        <span class="text">{{ social }}</span>
                    </a>
                </li>
            {%- endif -%}
        {%- endfor -%}
    </ul>
</div>